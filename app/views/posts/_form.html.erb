<% if item.errors.any? %><%# check with invalid may cause an error %>
  <div class="alert alert-danger">
    <ul>
    <% item.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for item, html: {class: "form-vertical"} do |f| %>

<div class="form-group">
  <%= f.text_field :name, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.text_field :slug, class: 'form-control' %>
</div>

<div class="form-group">
  <label for="category">Category</label>
  <%= f.select(:category_id, Category.pluck(:name, :id),{include_blank: false}, {class: 'form-control'}) %>
  <%#= f.select :category_id, Category.pluck(:id, :slug), include_blank: true %>
  <%#= debug Category.pluck(:id, :slug) %>
</div>

<div class="form-group">
  <%= f.text_area :content, size: "60x12", class: 'form-control' %>
</div>

  <%= f.submit "Save", class: 'btn btn-success' %>
<% end %>
