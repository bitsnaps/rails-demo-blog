
<h2>Create a Post</h2>
<%= form_for @post, html: {class: "form-vertical"} do |f| %>
<div class="form-group">
  <%= f.text_field :name, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.text_area :content, size: "60x12", class: 'form-control' %>
</div>
  <%= f.submit "Create", class: 'btn btn-success' %>
<% end %>
